{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@rental-system/auth": ["libs/auth/src/index.ts"],
      "@rental-system/common": ["libs/common/src/index.ts"],
      "@rental-system/config": ["libs/config/src/index.ts"],
      "@rental-system/database-storage": ["libs/database-storage/src/index.ts"],
      "@rental-system/domain": ["libs/domain/src/index.ts"],
      "@rental-system/domain-testing": ["libs/domain-testing/src/index.ts"],
      "@rental-system/dto": ["libs/dto/src/index.ts"],
      "@rental-system/dto-nest": ["libs/dto-nest/src/index.ts"],
      "@rental-system/dto-testing": ["libs/dto-testing/src/index.ts"],
      "@rental-system/filters": ["libs/filters/src/index.ts"],
      "@rental-system/microservices": ["libs/microservices/src/index.ts"],
      "@rental-system/validators": ["libs/validators/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
